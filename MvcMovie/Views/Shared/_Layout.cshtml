<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link
      rel="stylesheet"
      href="~/MvcMovie.styles.css"
      asp-append-version="true"
    />
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon.ico" />
  </head>
  <body>
    <header class="header">
      <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
        <div class="container-fluid">
          <a
            class="navbar-brand"
            asp-area=""
            asp-controller="Movies"
            asp-action="Index"
            >Mov<span class='accent'>A</span>pp
            </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target=".navbar-collapse"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div
            class="navbar-collapse collapse d-sm-inline-flex justify-content-between"
          >
            <ul class="navbar-nav flex-grow-1">
              <li class="nav-item">
                <a
                  class="nav-link"
                  asp-area=""
                  asp-controller="Home"
                  asp-action="Index"
                  >Home</a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link"
                  asp-area=""
                  asp-controller="Home"
                  asp-action="Categories"
                  >Categories</a>
              </li>
              <li class="nav-item"></li>
                <a
                  class="nav-link"
                  asp-area=""
                  asp-controller="Home"
                  asp-action="Favorites"
                  >Favorites</a>
              </li>
            </ul>
            <div class="nav-item">
                <a
                  class="nav-link"
                  asp-area=""
                  asp-controller="Home"
                  asp-action="SignIn"
                  >Sign In</a>
              </div>
          </div>
        </div>
      </nav>
    </header>
    <div class="container">
      <div class="movie-background" id="background"></div>
      <div class="overlay"></div>
      <main role="main" class="pb-3">@RenderBody()</main>
    </div>

    <footer class="border-top footer">
      <div class="container">
        <div>
          &copy; 2025 - Movie App -
          <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        <div>
          Created by<a href="https://github.com/IvanDok13" target="_blank">
            IvanDok</a
          >
        </div>
      </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script type="module" src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
  </body>
</html>
