@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 hero-section
    ">Choose the most incredible Movie</h1>
    <p>Refresh the page to change the poster</p>
</div>

<div class="movie-card">
        <div class="row">
          <div class="col-md text-left">
            <h2 id="movie-title">Inception</h2>
            <p id="movie-year" class="movie-year">2010</p>
            <div class="rating">
              <i class="fas fa-star"></i>
              <span id="movie-rating">8.8</span>/10
            </div>
            <p id="movie-description" class="mt-3">A thief who steals corporate secrets through the use of dream-sharing technology is given the inverse task of planting an idea into the mind of a C.E.O.</p>

            <button class="btn btn-change mt-3" onclick="changeBackground()">
              <i class="fas fa-sync-alt me-2"></i>Change Background
            </button>
          </div>
        </div>
      </div>

      
